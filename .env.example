# Research Paper Summarizer - Environment Variables Template
# Copy this file to .env and fill in your values

# Model Configuration
DEFAULT_MODEL_NAME=microsoft/phi-2
DEVICE=auto
USE_LORA=true
LORA_ADAPTER_PATH=models/lora-adapter

# Training Configuration  
LEARNING_RATE=2e-4
BATCH_SIZE=1
GRADIENT_ACCUMULATION=8
MAX_EPOCHS=3

# Data Paths
DATA_DIR=data/processed
OUTPUT_DIR=logs
MODELS_DIR=models

# Hugging Face Hub (optional for model downloads)
# HF_TOKEN=your_token_here

# Weights & Biases (optional for training monitoring)
# WANDB_API_KEY=your_key_here
# WANDB_PROJECT=research-paper-summarizer

# Advanced Settings
MAX_SEQUENCE_LENGTH=2048
TOP_K_CHUNKS=5
CHUNK_OVERLAP=200

# Debug Settings
LOG_LEVEL=INFO
VERBOSE=false